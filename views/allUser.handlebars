<div class="container">
	<div class="row">
        <div class="col-md-12">
            <div >
                <a class="btn btn-primary" href="/user/add" data-toggle="modal">AddUser</a>
            </div>
        <h4>Danh sách người dùng</h4>
        <div class="table-responsive" style="max-width:1060px">
            <table id="mytable" class="table table-bordred table-striped">
                <thead>
                    <th>Name</th>
                    <th>UserName</th>
                    <th>Email</th>
                    <th>Loation</th>
                    <th>Edit</th>
                    <th>Delete</th>
                    <th>AddNew</th>
                </thead>
                <tbody>
                    {{#each user}}
                    <tr>
                    <td style="width:8%">{{name}}</td>
                    <td style="width:8%">{{username}}</td>
                    <td style="width:7%">{{email}}</td>
                    <td style="width:8%">{{location}}</td>
                    <td style="width:4%"><p data-placement="top" data-toggle="tooltip" title="Edit"><a href="../user/edit/{{id}}" class="btn btn-primary btn-xs glyphicon glyphicon-pencil" data-title="Edit" data-toggle="modal" data-target="#edit" /></p></td>
                    <td style="width:4%"><p data-placement="top" data-toggle="tooltip" title="Delete"><a href="../user/delete/{{id}}" class="btn btn-danger btn-xs glyphicon glyphicon-trash" data-title="Delete" data-toggle="modal" data-target="#delete" /></p></td>
                    <td style="width:4%"><p data-placement="top" data-toggle="tooltip" title="AddNew"><a href="../user/add" class="btn btn-success btn-xs glyphicon glyphicon-plus-sign" data-title="AddNew" data-toggle="modal" data-target="#addnew" /></p></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            </div>
        </div>
	</div>
</div>