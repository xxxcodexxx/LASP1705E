<div class="container">
<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    	<form role="form" method="POST" action="/user/edit/{{user.id}}">
			<h2>Thông tin người dùng</h2>
			<hr class="colorgraph">
			<div class="row">
				<div class="col-xs-6 col-sm-6 col-md-6">
					<div class="form-group">
                        <input type="text" class="form-control input-lg" name="name" placeholder="Họ tên người dùng" tabindex="1" value="{{user.name}}" required>
					</div>
				</div>
				<div class="col-xs-6 col-sm-6 col-md-6">
					<div class="form-group">
						<input type="text" class="form-control input-lg" name="username" placeholder="UserName" tabindex="2" required value="{{user.username}}">
					</div>
				</div>
			</div>
			<div class="form-group">
				<input type="email" class="form-control input-lg" name="email" placeholder="Email Address" tabindex="3" required value="{{user.email}}">
			</div>
			<div class="form-group">
				<input type="text" class="form-control input-lg" name="location" placeholder="Địa chỉ" tabindex="4" required value="{{user.location}}">
			</div>
            <div class="form-group">
                <input type="password" class="form-control input-lg" name="password" placeholder="Mật khẩu" tabindex="5" value="{{user.password}}">
			</div>
			<hr class="colorgraph">
			<div class="row">
				<div class="col-xs-6 col-md-6"><input type="submit" value="Update" class="btn btn-primary btn-block btn-lg" tabindex="6"></div>
				<div class="col-xs-6 col-md-6"><a href="/" class="btn btn-danger btn-block btn-lg">Cancel</a></div>
			</div>
		</form>
	</div>
</div>