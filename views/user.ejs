                            <dd class="edit"><input class="form-control" id="street" type="text" value="<%=address.street%>"></dd>
                            <br>
                        <dt>City:</dt>
                            <dd class="view"><%=address.city%></dd>
                            <dd class="edit"><input class="form-control" id="city" type="text" value="<%=address.city%>"></dd>
                            <br>
                        <dt>State:</dt>
                            <dd class="view"><%=address.state%></dd>
                            <dd class="edit"><input class="form-control" id="state" type="text" value="<%=address.state%>"></dd>
                            <br>
                        <dt>Zip:</dt>
                            <dd class="view"><%=address.zip%></dd>
                            <dd class="edit"><input class="form-control" id="zip" type="text" value="<%=address.zip%>"></dd>
                            <br>
                        
                        <dt></dt>
                            <dd class="edit">
                                <div class="btn-change">
                                    <p onclick="save()" style="padding:3px 15px ;color: white; background-color:blue; display:inline-block; border-radius:3px"> Lưu </p>
                                    <p onclick="cancel()" style="padding:3px 15px ;color: white; background-color:red; display:inline-block; border-radius:3px"> Hủy </p>
                                </div>
                            </dd>
                    </dl>
            <div class="btnn" style="text-align:center">
                <p onclick="edit()" style="padding:3px 15px ;color: white; background-color:blue; display:inline-block; border-radius:3px"> Sửa </p>
                <p onclick="del()" style="padding:3px 15px ;color: white; background-color:red; display:inline-block; border-radius:3px"> Xóa </p>
            </div>
                </div>
            </div>
        </div>
        </div>
        </div>
        
    <script>
        $('.edit').hide()
        function edit(){
            $('.btnn').hide()
            $('.edit').show()
            $('.view').hide()
        }
        function cancel(){
            $('.edit').hide()
            $('.btnn').show()
            $('.view').show()
        }
        function save(){
            $.ajax('/<%= user.username%>',{
                method:'PUT',
                data:{
                    street: $('#street').val(),
                    city: $('#city').val(),
                    state: $('#state').val(),
                    zip: $('#zip').val(),
                    title:$('#title').val(),
                    first:$('#first').val(),
                    last:$('#last').val(),
                    full:$('#full').val(),
                },
                complete:function(){
                    cancel();
                    location.reload();
                }
            })
        }
        function del(){
            $.ajax('/<%= user.username%>',{
                method:'DELETE',
                complete:function(){
                    cancel();
                    location.reload();
                }
            })
        }
        function pre(){
            window.location = "/"
        }
            $('.btnn').show()
    </script>    
