     <!--main content start-->
                <div class="row">
                    <div class="col-lg-12">
                                 <div >
                                    <a class="btn btn-primary" href="/author/add" data-toggle="modal">
                                        AddAuthor
                                    </a>
                                 </div>
                            <table class="table table-striped table-advance table-hover">
                                <tbody>
                                    <tr>
                                        <th><i class="icon_image"></i> Image </th>
                                        <th><i class="icon_profile"></i> Name</th>
                                       
                                        <th><i class="icon_calendar"></i> Date_Created</th>
                                        <th><i class="icon_calendar"></i> Date_Update</th>
                                        <th><i class="icon_mail_alt"></i> Email</th>
                                        <th><i class="icon_check"></i> Status</th>
                                        <!--<th><i class="icon_profile"></i> User_update</th>-->
                                        <th><i class="icon_cogs"></i> Action</th>
                                         
                                    </tr>
                                        {{#each Author}}
                                    <tr>
                                        <td><img src="../upload/{{image}}" style="width : 100px; height : 100px"></td>
                                        <td>{{name}}</td>
                                        <td>{{date_created}}</td>
                                        <td>{{date_update}}</td>
                                        <td>{{email}}</td>
                                        <td> {{active}}</td>
                                       <!-- <td>{{user.name}}</td>-->
                                        
                                        <td>
                                            <div class="btn-group">
                                                <p data-placement="top" data-toggle="tooltip" title="Edit"><a class="btn btn-success" href="../Author/edit/{{id}}"><i class="glyphicon glyphicon-pencil"></i></a></p>
                                                <p data-placement="top" data-toggle="tooltip" title="Delete"><a class="btn btn-danger" href="../author/delete/{{id}}" onclick="return confirm('Are you sure you want to delete this item?');"><i class="glyphicon glyphicon-trash"></i></a></p>
                                            </div>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                    </div>
                </div>